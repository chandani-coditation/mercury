# Database Configuration
# IMPORTANT: All scripts use Docker PostgreSQL only (via docker exec)
# These values are used by Docker containers and scripts that connect via docker exec
POSTGRES_HOST=<localhost>
POSTGRES_PORT=5432
POSTGRES_DB=<db_name>
POSTGRES_USER=<db_user>
POSTGRES_PASSWORD=<db_password>

# Note: Scripts (cleanup_db.py, verify_db.py) use docker exec to connect to
# the 'noc-ai-postgres' container, so they read these credentials from .env
# but always connect via Docker, never to local PostgreSQL instance.

# LLM Configuration
# Option 1: Direct OpenAI API (for local development and testing)
# Set OPENAI_API_KEY to use OpenAI API directly
OPENAI_API_KEY=<>

# Option 2: Private LLM Gateway (for production)
# Set PRIVATE_LLM_GATEWAY=true to enable gateway mode
# When gateway is enabled, Private LLM gateway will be used for LLM calls

PRIVATE_LLM_GATEWAY=false
PRIVATE_LLM_GATEWAY_URL=<https://your-gateway-url/api/v1/ai/call>
PRIVATE_LLM_GATEWAY_EMBEDDINGS_URL=<https://your-gateway-url/api/v1/ai/openai/embeddings>
PRIVATE_LLM_AUTH_KEY=<your-gateway-auth-key>
# Optional: Path to SSL certificate file for gateway (leave empty to use default verification)
PRIVATE_LLM_CERT_PATH=<>

# Service Configuration
INGESTION_SERVICE_HOST=<0.0.0.0>
INGESTION_SERVICE_PORT=8000
AI_SERVICE_HOST=0.0.0.0
AI_SERVICE_PORT=8001

# Frontend Configuration
# Frontend runs in browser, so it needs to use host's localhost to reach backend
VITE_API_BASE_URL=http://localhost:8001/api/v1

# CORS Configuration
# IMPORTANT: In production, set this to your actual frontend domain(s)
# Comma-separated list of allowed origins (e.g., "https://yourdomain.com,https://app.yourdomain.com")
# Defaults to http://localhost:5173 for development only
CORS_ALLOWED_ORIGINS=http://localhost:5173

LOG_LEVEL=${LOG_LEVEL:-INFO}
DB_POOL_MIN=${DB_POOL_MIN:-5}
DB_POOL_MAX=${DB_POOL_MAX:-20}
DB_POOL_WAIT_TIMEOUT=${DB_POOL_WAIT_TIMEOUT:-30}